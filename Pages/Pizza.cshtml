@page
@model PizzaShop.Pages.PizzaModel
@{
}

<div class="text-center">
    <div class="mainText">
        <h1> Our Pizza Collection</h1>
        <h2> Select Your Pizza</h2>
        <h3> and We Will Deliver it for You</h3>
        <p class="smallText"><i>Only one Pizza per Order</i></p>
    </div>
    <div class="container">
        <div class="row">
            <div class="col-12 mb-5 mt-5">
                <div class="w-100 row makeYourOwnDiv">
                    <div class="col-4">
                    <img src="~/Images/Pizzas/Create.png" class="w-100" />
                    </div>
                    <div class="col-8 align-items-center">
                        <div class="align-midlle makeYourOwnText">
                            <h3 style="text-align:left;">Create Your Own Pizza</h3>
                            <p style="text-align:left">Make Pizza with our Pizza Makers</p>
                            <a class="btn btn-primary" style="float: left" asp-area="" asp-page="Forms/CustomPizza">Try Now</a>
                        </div>
                    </div>
                </div>
            </div>

            @foreach (var pizza in Model.PizzaDB)
                {
                var imagePath = "~/Images/Pizzas/" + (pizza.ImageTitle + ".png");
                
                    <div class="col-4 mb-5">
                
                
                <a class="pizzaImage"  asp-area="" asp-page="Checkout/Checkout"
                asp-route-ImageTitle="@pizza.ImageTitle" asp-route-PizzaPrice="@pizza.FinalPrice"
                ><img src=@imagePath class="w-100" asp-append-version="true" /></a>
                <br />

            </div>
                }
            
        </div>
    </div>
</div>